    <div class="col-12">
    <div class="row">
    {{#each itemList}}
    <div class="card">
        <div class="card-body">
            <div class="row">
            <div class="col-3">
                <p>{{number}}</p>
                <p><b>{{status}}</b></p>
            </div>
            <div class="col-3">
                {{#with amount}}
                <p>{{title}}</p>
                <p><b>{{value}}:</b></p>
                {{/with}}
            </div>
            <div class="col-3">
                {{#each images}}
                <img src={{this}} alt="">
                {{/each}}
            </div>
            <div class="col-3 mt-4">
                {{#with button}}
                {{#if isPrimary}}
                <a class="btn btn-primary" href={{link}}>{{text}}</a>
                {{/if}}
                {{/with}}
            </div>
            </div>
        </div>
    </div>
    </div>
    {{/each}}
    </div>
 </div>