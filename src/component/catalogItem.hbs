<div class="row mt-5">
        {{#each goodsList}}
        <div class="col-6">
        <div class="card g-2 my-2">
            <img class="card-img" src={{img}} alt="#">
            <div class="card-body">
            {{#if isHot}}    
            <span class="badges text-bg-warning rounded-pill p-1 text-uppercase text-light">{{isHot}}</span>
            {{/if}}
            {{#if isNew}}
             <span class="badges text-bg-primary rounded-pill p-1">{{isNew}}</span>
             {{/if}}
             {{#if isFast}}
             <div class="badges text-bg-success text-center p-1 mt-3">
                {{isFast}}
             </div>
             {{/if}}
             {{#if isFree}}
             <div class="badges text-bg-secondary text-center p-1 mt-3">
                {{isFree}}
             </div>
             {{/if}}
             <div class="mt-3">
                <h3>{{name}}</h3>
                {{#with review}}
                <p>{{amount}} {{text}}</p>
                {{/with}}
                <h4>{{price}}</h4>
                <p>{{delivery}}</p>
             </div>
             <div class="row">
              {{#each buttons}}
              {{#if isPrimary}}
              <div class="mt-1 mb-2">
              <a class="btn btn-primary" href={{link}}>{{text}}</a>
              </div>
              {{/if}}
              {{#if isSecondary}}
              <div>
              <a class="btn btn-secondary" href={{link}}>{{text}}</a>
              </div>
              {{/if}}
              {{/each}}
             </div>
             {{#each characteristics}}
             <div class="mt-3">
             <ul>
                <li>{{title}}: {{value}}</li>
             </ul>
             </div>
             {{/each}}
            </div>
        </div>
        </div>
        {{/each}}
    </div>
</div>