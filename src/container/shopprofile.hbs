<main>
    <div class="col-12">
        <div class="row">
            <section>
                {{#with navigation}}
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <ul class="nav">
                                {{#each links}}
                                <li class="nav-item">
                                    <a class="nav-link" target="_blank" href={{href}}>{{text}}</a>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                {{/with}}
            </section>
            <section>
                <div class="row mt-5 mb-3">
                    <p class="display-6"><b>{{header}}</b></p>
                </div>
                {{#with purchase}}
                <div class="row">
                    <ul class="nav nav-tabs">
                        {{#each tabs}}
                        {{#if @first}}
                        <li class="nav-item col-3">
                            <a class="nav-link" href="#">{{this}}</a>
                        </li>
                        {{else}}
                        <li class="nav-item col-3">
                            <a class="nav-link" href="#">{{this}}</a>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                    <div class="row mt-3 mb-3 me-3">
                        <div class="col-4">
                            {{#with actionBlock}}
                            {{#with input}}
                            <input class="form-control" type="text" placeholder={{placeholder}}>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#each buttons}}
                            {{#if isSuccess}}
                            <a class="btn btn-success" href={{link}}>{{text}}</a>
                            {{/if}}
                            {{#if isOutline}}
                            <a class="btn btn-outline-success" href={{link}}>{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                            <a class="btn btn-outline-danger" href={{link}}>{{text}}</a>
                            {{/if}}
                            {{/each}}
                            {{/with}}
                        </div>
                    </div>
                </div>
                <section>
                    {{> purchaseItem}}
                </section>
                {{/with}}
            </section>
            <section>
                {{#with userInfo}}
                <div class="row mt-5 mb-5">
                    <p class="display-6 mb-5"><b>{{title}}</b></p>

                    <div class="card">
                        <div class="card-body">
                            {{#with profileData}}
                            <h2 class="card-title">{{title}}</h2>
                            <div class="card mt-3">
                                <div class="card-body">
                                    <div class="row">
                                        {{#with fullName}}
                                        {{#with surname}}
                                        <div class="col-4">
                                            <p>{{title}}</p>
                                            <p><b>{{value}}</b></p>
                                        </div>
                                        {{/with}}
                                        {{#with name}}
                                        <div class="col-4">
                                            <p>{{title}}</p>
                                            <p><b>{{value}}</b></p>
                                        </div>
                                        {{/with}}
                                        {{#with middleName}}
                                        <div class="col-4">
                                            <p>{{title}}</p>
                                            <p><b>{{value}}</b></p>
                                        </div>
                                        {{/with}}
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                            <div class="card mt-3">
                                <div class="card-body">
                                    <div class="row">
                                        {{#with otherInfo}}
                                        {{#with birthday}}
                                        <div class="col-4">
                                            <p>{{title}}</p>
                                            <p><b>{{value}}</b></p>
                                        </div>
                                        {{/with}}
                                        {{#with sex}}
                                        <div class="col-4">
                                            <p>{{title}}</p>
                                            <p><b>{{value}}</b></p>
                                        </div>
                                        {{/with}}
                                        {{#with language}}
                                        <div class="col-4">
                                            <p>{{title}}</p>
                                            <p><b>{{value}}</b></p>
                                        </div>
                                        {{/with}}
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                            {{/with}}
                            <div class="card mt-3">
                                <div class="card-body">
                                    <div class="row">
                                        {{#each buttons}}
                                        <div class="col-4">
                                            {{#if isPrimary}}
                                            <a class="btn btn-primary" href={{link}}>{{text}}</a>
                                            {{/if}}
                                            {{#if isSecondary}}
                                            <a class="btn btn-outline-secondary" href={{link}}>{{text}}</a>
                                            {{/if}}
                                            {{#if isDanger}}
                                            <a class="btn btn-outline-danger" href={{link}}>{{text}}</a>
                                            {{/if}}
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    {{#with recipients}}
                    <div class="card col-12 mt-3">
                        <div class="card-body">
                            <h2 class="card-title">{{title}}</h2>
                            <div class="col-4">
                                <div class="row">
                                    {{#each users}}
                                    <div class="card col-5 me-3">
                                        <div class="row">
                                            <p><b>{{name}}</b></p>
                                            <p>{{phone}}</p>
                                            {{#with button}}
                                            <a class="btn btn-primary" href={{link}}>{{text}}</a>
                                            {{/with}}
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/with}}
                    <section>
                        <div class="row mt-3">
                            <div class="col-12">
                                {{#with contacts}}
                                <div class="card">
                                    <div class="card-body">
                                        <h2 class="card-title mb-3">{{title}}</h2>
                                        <div class="row">
                                            {{#each contactData}}
                                            <div class="card col-3 ms-1 me-5">
                                                <div class="row">
                                                    <div class="card-body">
                                                    <p>{{title}}</p>
                                                    <p><b>{{value}}</b></p>
                                                    {{#with button}}
                                                    {{#if isPrimary}}
                                                    <a class="btn btn-primary" href={{link}}>{{text}}</a>
                                                    {{/if}}
                                                    {{#if isSecondary}}
                                                    <a class="btn btn-secondary" href={{link}}>{{text}}</a>
                                                    {{/if}}
                                                    {{#if isDanger}}
                                                    <a class="btn btn-danger" href={{link}}>{{text}}</a>
                                                    {{/if}}
                                                    {{/with}}
                                                    </div>
                                                </div>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                                {{/with}}
                            </div>
                        </div>
                    </section>
                </div>
                {{/with}}
            </section>
            <hr />
            <section>
                {{> shopFooter}}
            </section>
        </div>
    </div>
</main>