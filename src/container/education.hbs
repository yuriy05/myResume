<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My education" big=true}}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}}(In progress...){{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <br />
        <section>
             {{> title data="Courses"}}
            <ul>
                {{#each courses}}
                <li>{{name}}</li>
                {{/each}}
            </ul>
        </section>
        <br />
        <section>
            {{> title data="My Certificates"}}
            <ul>
                {{#each certificates}}
                <li>{{name}} ({{id}})</li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>
